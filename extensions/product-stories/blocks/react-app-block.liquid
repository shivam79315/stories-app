<!-- Include React and ReactDOM -->
<script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
<script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>

{% if template.name == 'product' %}
  <!-- Root Element for the React App -->
  <div id="react-app-block-root" data-product="{{ product.id }}" data-settings="{{ block.settings | json }}"></div>

  <!-- Include Vendor and Main Chunks -->
  <script src="{{ 'vendors-d2eb5610.2afc04552c7476bda9e9.js' | asset_url }}"></script>
  <script src="{{ 'vendors-e5bca7e4.df94023cf8c7c0fccb41.js' | asset_url }}"></script>
  <script src="{{ 'vendors-71b19865.3e5a003f9e8015825330.js' | asset_url }}"></script>
  <script src="{{ 'vendors-229eafb5.257f88b7b5ddac44116b.js' | asset_url }}"></script>
  <script src="{{ 'main.43a4978f6d9a92c55420.js' | asset_url }}"></script>

  <!-- Include Styling (if applicable) -->
  <link rel="stylesheet" href="{{ 'react-app-block.css' | asset_url }}">
{% endif %}

<!-- Mount the React App -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const rootElement = document.getElementById("react-app-block-root");
  console.log(AppReelsList)
    if (rootElement && typeof AppReelsList !== "undefined") {
      const root = ReactDOM.createRoot(rootElement);
      root.render(React.createElement(window.AppReelsList.default));
    } else {
      console.error("ReactDOM or AppReelsList is not defined.");
    }
  });
</script>

{% schema %}
{
  "name": "React App Block",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    },
    {
      "type": "url",
      "id": "data_source",
      "label": "Data Source URL"
    }
  ]
}
{% endschema %}